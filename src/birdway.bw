meta [
	'name': 'Birdway',
];

use birdway_lexer;

option! str OUTPUT_DIR o;
param* str INPUT 'Scripts to compile';

run {
	func compile;
	for i in [0..##INPUT] do {
		println "Compiling $(input[i]) ... ($(i+1)/$(#input))";

		try compile(input[i]) on USER do logerr();
	};

	func compile(source) -> {
		println '  Not implemented';
	};
};